    <fieldUpdates>
        <fullName>Update10DayEmailSent</fullName>
        <description>Updates 10 day email sent field as true.</description>
        <field>X10_Day_Email_Sent__c</field>
        <literalValue>1</literalValue>
        <name>Update10DayEmailSent</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>CovenantTaskEmailAlert</fullName>
        <active>false</active>
        <criteriaItems>
            <field>Task.Covenant_Milestones__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
        <criteriaItems>
            <field>Task.Status</field>
            <operation>equals</operation>
            <value>Open</value>
        </criteriaItems>
        <criteriaItems>
            <field>Task.Type</field>
            <operation>equals</operation>
            <value>Financial Covenants</value>
        </criteriaItems>
        <description>is sent when a covenant has been created for ten days with an open task and a null milestone on the covenant record.</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>X10dayCovenantEmail</name>
                <type>Alert</type>
            </actions>
            <actions>
                <name>Update10DayEmailSent</name>
                <type>FieldUpdate</type>
            </actions>
            <offsetFromField>Task.CreatedDate</offsetFromField>
            <timeLength>10</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
</Workflow>
