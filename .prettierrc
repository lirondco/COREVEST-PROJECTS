{
  "trailingComma": "none",
  "overrides": [
    {
      "files": "**/lwc/**/*.html",
      "options": { "parser": "lwc" }
    },
    {
      "files": "*.{cmp,page,component}",
      "options": { "parser": "html" }
    },
    {
      "files": "*.{cls,trigger}",
      "options": { "parser": "apex" }
    },
    {
      "files": "*.{apex}",
      "options": { "parser": "apex-anonymous" }
    }
  ]
}
